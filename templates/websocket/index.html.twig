{% extends 'base.html.twig' %}

{% block title %}WebSocket Server{% endblock %}

{% block body %}
<style> 
    .form-group {
        margin-bottom: 10px;
    }
 
    input {
        border: solid lightgrey 1px;
        padding: 8px;
    }
 
    label {
        display: inline-block;
        min-width: 150px;
    }
 
    #chat {
        height: 400px;
        width: 100%;
        border: solid #8c8c8c 1px;
        border-radius: 10px;
        overflow: auto;
        margin-bottom: 20px;
        margin-top: 20px;
    }
 
    button {
        padding: 6px 12px;
    }
 
    .message {
        padding: 10px 5px;
        margin: 10px;
        border-radius: 5px;
        background: #d0d0d0;
    }
</style>
 
<div class="container">
    <div id="chat">
    
    </div>
    <div>
        <div class="form-group">
            <label for="message" class="text-light">Message:</label>
            <input type="text" id="message" class="form-control">
        </div>
        <button type="button" class="btn btn-secondary btn-block" id="sendBtn">Send</button>
    </div>
</div>
{% endblock %}
{% block javascripts %}
<script type="text/javascript">
    const socket = new WebSocket("ws://172.16.24.172:3001");
    const userid = choose(["Manolo", "Miguel", "Peter", "Willy", "Sebasti√°n"])
    
    // Open connection
    socket.addEventListener("open", function() {
        console.log("CONNECTED");
    });

    // Send messages
    document.getElementById("sendBtn").addEventListener("click", function() {
        const message = {
            name: userid,
            message: document.getElementById("message").value
        };
        socket.send(JSON.stringify(message));
        addMessage(message.name, message.message);
    });

    // Recieve messages
    socket.addEventListener("message", function(e) {
        console.log(e.data);
        try
        {
            const message = JSON.parse(e.data);
            addMessage(message.name, message.message);
        }
        catch(e)
        {
            // Catch any errors
        }
    });

    // Add messages to DOM
    function addMessage(name, message) {
        const messageHTML = "<div class='message'><strong>" + name + ":</strong> " + message + "</div>";
        document.getElementById("chat").innerHTML += messageHTML
    }

    function choose(choices) {
        var index = Math.floor(Math.random() * choices.length);
        return choices[index];
    }
</script>
{% endblock %}